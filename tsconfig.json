{
	"compilerOptions": {
		"module": "commonjs",
		"outDir": "build",
		"noImplicitAny": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"removeComments": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"target": "es2015",
		"declaration": true,
		"skipLibCheck": true
	},
	"include": [
		"src/*.ts"
	]
}
